<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal">

    <TextView
        style="@style/TextAppearance.MaterialComponents.Headline3"
        android:layout_marginTop="42dp"
        android:id="@+id/current_temperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/current_condition_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        style="@style/TextAppearance.MaterialComponents.Headline5"
        android:layout_marginBottom="42dp"
        android:id="@+id/current_condition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        style="@style/TextAppearance.MaterialComponents.Headline6"
        android:layout_margin="20dp"
        android:layout_gravity="left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/title_for_weather_per_hour" />

    <include
        layout="@layout/weather_per_hour_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/weather_by_hours_layout" />

    <TextView
        style="@style/TextAppearance.MaterialComponents.Headline6"
        android:layout_margin="20dp"
        android:layout_gravity="left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/next_days"
        android:id="@+id/title_for_weather_per_day" />

    <include
        layout="@layout/weather_per_day_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/weather_per_day_layout" />

    <TextView
        style="@style/TextAppearance.MaterialComponents.Headline6"
        android:layout_margin="20dp"
        android:layout_gravity="left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/detailed_information"
        android:id="@+id/title_for_detailed_information" />

    <include
        layout="@layout/details_current_weather_grid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/details_current_weather_grid" />

</LinearLayout>